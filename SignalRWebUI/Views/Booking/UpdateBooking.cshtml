@model UpdateBookingDto
@{
	ViewData["Title"] = "UpdateBooking";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon işlemleri</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
                        <input type="hidden" asp-for="BookingID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name"> Ad Soyad Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Kategori Adı">

							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone"> Telefon Numarası</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Kategori Adı">

							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail"> Mail Adresi Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="Kategori Adı">

							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount"> Kişi Sayısı Giriniz</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount" placeholder="Kategori Adı">

							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date"> Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="Date" id="Date" placeholder="Kategori Adı">

							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-primary">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
			
		</div>
	</div>
</div>
