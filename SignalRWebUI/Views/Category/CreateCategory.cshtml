
@model SignalRWebUI.ViewModels.Dtos.CategoryDtos.CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori işlemleri</h4>
		<div class="row">
			<div class="col-md-6">
				<form  method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Kategori Girişi</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="categoryname">Kategori Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="CategoryName" id="CategoryName" placeholder="Kategori Adı">
							
						</div>
						
						
					</div>
					<div class="card-action">
						<button class="btn btn-primary">Kategori Ekle</button>
					</div>
				</div>
				</form>
			</div>
			
		</div>
	</div>
</div>
