@model SignalRWebUI.ViewModels.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

div class="content">
<div class="container-fluid">
	<h4 class="page-title">Kategori işlemleri</h4>
	<div class="row">
		<div class="col-md-6">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title"> Kategori Güncelleme Sayfası </div>
					</div>
					<div class="card-body">
                        <input type="hidden" asp-for="Categoryid" />
						<div class="form-group">
							<label for="categoryname">Kategori Adını Giriniz</label>
							<input type="text" class="form-control" asp-for="CategoryName" id="CategoryName" placeholder="Kategori Adı">

						</div>


					</div>
					<div class="card-action">
						<button class="btn btn-primary">Kategori Güncelle</button>
					</div>
				</div>
			</form>
		</div>
		
	</div>
</div>
</div>

